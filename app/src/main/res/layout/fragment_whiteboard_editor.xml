<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Compact Toolbar for Fragment -->
    <LinearLayout
        android:id="@+id/tools_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/colorSurfaceContainer"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <org.weproz.etab.ui.custom.WhiteboardToolbarView
            android:id="@+id/whiteboard_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_save"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="?attr/colorOnSurface"/>

    </LinearLayout>

    <org.weproz.etab.ui.notes.whiteboard.WhiteboardView
        android:id="@+id/whiteboard_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorSurface"
        app:layout_constraintBottom_toTopOf="@id/page_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tools_container" />

    <!-- Page Navigation -->
    <LinearLayout
        android:id="@+id/page_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        android:background="?attr/colorSurfaceContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_prev_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chevron_left"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous page"
            app:tint="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/text_page_indicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Page 1 of 1"
            android:textAlignment="center"
            android:textSize="14sp"
            app:tint="?attr/colorOnSurface"/>

        <ImageButton
            android:id="@+id/btn_next_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chevron_right"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next page"
            app:tint="?attr/colorOnSurface"/>

        <ImageButton
            android:id="@+id/btn_add_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add page"
            app:tint="?attr/colorOnSurface"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
