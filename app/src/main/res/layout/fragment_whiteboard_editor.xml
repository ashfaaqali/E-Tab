<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Compact Toolbar for Fragment -->
    <LinearLayout
        android:id="@+id/tools_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00FFFF"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_tool_brush"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_brush"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@android:color/black"/>

        <ImageButton
            android:id="@+id/btn_tool_undo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_undo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@android:color/black"/>

        <ImageButton
            android:id="@+id/btn_tool_redo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_redo"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@android:color/black"/>

        <ImageButton
            android:id="@+id/btn_tool_grid"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_grid"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@android:color/black"/>

        <ImageButton
            android:id="@+id/btn_tool_text"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_text_fields"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@android:color/black"/>

        <!-- Space -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_new_doc"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_description"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@android:color/black"/>

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_save"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@android:color/black"
            android:visibility="gone"/> <!-- Auto-save preferred, but optional manual -->

    </LinearLayout>

    <org.weproz.etab.ui.notes.whiteboard.WhiteboardView
        android:id="@+id/whiteboard_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tools_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
