<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_toolbar_rounded"
    android:padding="4dp"
    android:elevation="4dp">

    <ImageButton
        android:id="@+id/btn_tool_pen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_brush"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="@android:color/black"/>

    <ImageButton
        android:id="@+id/btn_tool_eraser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_eraser"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="@android:color/black"/>

    <ImageButton
        android:id="@+id/btn_tool_lasso"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_lasso"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="@android:color/black"/>

    <View
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="4dp"
        android:background="#E0E0E0"/>

    <ImageButton
        android:id="@+id/btn_tool_undo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_undo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="@android:color/black"/>

    <ImageButton
        android:id="@+id/btn_tool_redo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_redo"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="@android:color/black"/>

    <ImageButton
        android:id="@+id/btn_tool_clear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="@android:color/black"/>

</LinearLayout>