<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/btn_tool_pen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_brush"
            app:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/btn_tool_eraser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_eraser"
            app:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/btn_tool_lasso"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_lasso"
            app:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/btn_tool_grid"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_grid"
            app:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/btn_tool_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_text_fields"
            app:tint="?attr/colorOnSurface" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/colorOutlineVariant" />

        <ImageButton
            android:id="@+id/btn_tool_undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_undo"
            app:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/btn_tool_redo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_redo"
            app:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/btn_tool_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_delete"
            app:tint="?attr/colorOnSurface" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>