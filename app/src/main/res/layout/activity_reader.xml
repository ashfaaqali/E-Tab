<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Action Bar -->
    <LinearLayout
        android:id="@+id/top_action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_split_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_split_view"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Split View"
            app:tint="@android:color/white" />

    </LinearLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_action_bar" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/whiteboard_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CCCCCC"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Overlay Navigation Buttons (Constrained to WebView) -->
    <ImageButton
        android:id="@+id/btn_overlay_prev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="#80000000"
        android:src="@drawable/ic_chevron_left"
        android:padding="8dp"
        app:tint="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="@id/webview"
        app:layout_constraintTop_toTopOf="@id/webview"
        app:layout_constraintBottom_toBottomOf="@id/webview" />

    <ImageButton
        android:id="@+id/btn_overlay_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="#80000000"
        android:src="@drawable/ic_chevron_right"
        android:padding="8dp"
        app:tint="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="@id/webview"
        app:layout_constraintTop_toTopOf="@id/webview"
        app:layout_constraintBottom_toBottomOf="@id/webview" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/split_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:id="@+id/split_handle"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_drag_handle"
        android:background="#EEEEEE"
        android:scaleType="centerInside"
        android:elevation="8dp"
        android:visibility="gone"
        app:tint="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@+id/split_guideline"
        app:layout_constraintBottom_toBottomOf="@+id/split_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_notes_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notes"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:visibility="gone"
            app:tint="@android:color/black"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
