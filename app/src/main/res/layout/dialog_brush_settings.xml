<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:minWidth="300dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tool Type"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/group_tool_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radio_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pen"
            android:layout_marginEnd="24dp"/>

        <RadioButton
            android:id="@+id/radio_highlighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highlighter"
            android:layout_marginEnd="24dp"/>

        <RadioButton
            android:id="@+id/radio_eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eraser"/>
    </RadioGroup>

    <TextView
        android:id="@+id/title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Simple Grid for Colors - We can handle this dynamically or statically -->
    <LinearLayout
        android:id="@+id/container_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        
        <!-- Colors will be added dynamically or we assume fixed 6-7 -->
        <!-- Using View for color circles -->
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/seek_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="10"/>

</LinearLayout>
