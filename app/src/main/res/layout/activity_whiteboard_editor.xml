<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notes.whiteboard.WhiteboardEditorActivity">

    <!-- Custom Toolbar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@android:color/white" />

                <!-- Tools Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Color Select -->
                    <ImageButton
                        android:id="@+id/btn_tool_color"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                         android:background="@drawable/bg_toolbar_tool"
                        android:src="@drawable/ic_edit" 
                        android:padding="8dp"
                        app:tint="@android:color/white"/>

                    <!-- Eraser Select -->
                    <ImageButton
                        android:id="@+id/btn_tool_eraser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_eraser"
                        android:padding="8dp"
                        app:tint="@android:color/white"/>

                    <!-- Add Text -->
                    <ImageButton
                        android:id="@+id/btn_tool_text"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_text_fields"
                        android:padding="8dp"
                        app:tint="@android:color/white"/>

                    <!-- Grid -->
                    <ImageButton
                        android:id="@+id/btn_tool_grid"
                        android:layout_width="40dp"
                         android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_grid"
                        android:padding="8dp"
                        app:tint="@android:color/white"/>

                    <!-- Undo -->
                    <ImageButton
                        android:id="@+id/btn_tool_undo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_undo"
                        android:padding="8dp"
                        app:tint="@android:color/white"/>

                    <!-- Redo -->
                    <ImageButton
                        android:id="@+id/btn_tool_redo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_redo"
                        android:padding="8dp"
                        app:tint="@android:color/white"/>

                </LinearLayout>

                <!-- More Options (Menu) -->
                <!-- We will rely on the standard toolbar menu support for the 3 dots, 
                     so we don't add a manual button here unless we want custom.
                     Standard setSupportActionBar lets us use onCreateOptionsMenu. -->

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <org.weproz.etab.ui.notes.whiteboard.WhiteboardView
        android:id="@+id/whiteboard_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>
