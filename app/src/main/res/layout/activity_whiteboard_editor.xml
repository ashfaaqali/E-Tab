<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notes.whiteboard.WhiteboardEditorActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Whiteboard"
        app:menu="@menu/menu_whiteboard"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <org.weproz.etab.ui.notes.whiteboard.WhiteboardView
        android:id="@+id/whiteboard_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Simple Color Palette (hidden by default or shown in bottom sheet, simplified here as visible buttons for MVP) -->
    <LinearLayout
        android:id="@+id/tools_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_search_bar"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_color_black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_color_red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/holo_red_dark"
            android:layout_marginEnd="8dp"/>
            
        <ImageButton
            android:id="@+id/btn_color_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btn_eraser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_eraser"
            android:background="#EEEEEE" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
