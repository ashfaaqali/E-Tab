<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_rounded_controls"
    android:elevation="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textColor="?attr/titleTextColor"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/group_pen_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radio_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pen"
            android:textColor="?attr/titleTextColor"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/radio_highlighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/titleTextColor"
            android:text="@string/highlighter"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color"
        android:textColor="?attr/titleTextColor"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/container_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/size"
        android:textColor="?attr/titleTextColor"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/seek_size"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="50"
        android:progress="10"/>

</LinearLayout>